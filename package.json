{
    "name": "kyam-launcher",
    "version": "1.0.0",
    "description": "KyamTale Launcher - Enterprise Grade Hytale Launcher",
    "main": "dist/main/index.js",
    "scripts": {
        "dev": "vite",
        "build:app": "tsc && vite build",
        "build": "npm run build:app && electron-builder",
        "build:linux": "npm run build:app && electron-builder --linux",
        "preview": "vite preview",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
    },
    "keywords": [
        "hytale",
        "launcher",
        "electron",
        "react"
    ],
    "author": "KyamTale Team",
    "license": "MIT",
    "dependencies": {
        "@tanstack/react-query": "^5.0.0",
        "@types/fs-extra": "^11.0.4",
        "@types/tar": "^6.1.13",
        "adm-zip": "^0.5.16",
        "axios": "^1.0.0",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.0",
        "electron-updater": "^6.0.0",
        "framer-motion": "^11.0.0",
        "fs-extra": "^11.3.3",
        "immer": "^10.0.0",
        "lucide-react": "latest",
        "node-stream-zip": "^1.15.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "tailwind-merge": "^2.2.0",
        "tar": "^7.5.7",
        "winston": "^3.0.0",
        "zod": "^3.0.0",
        "zustand": "^5.0.0"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.1.18",
        "@types/adm-zip": "^0.5.7",
        "@types/node": "^20.0.0",
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.19",
        "electron": "^33.0.0",
        "electron-builder": "^26.0.0",
        "eslint": "^9.0.0",
        "eslint-plugin-react": "^7.35.0",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-react-refresh": "^0.4.9",
        "postcss": "^8.4.38",
        "tailwindcss": "^4.0.0",
        "typescript": "^5.0.0",
        "vite": "^6.0.0",
        "vite-plugin-electron": "^0.28.0",
        "vite-plugin-electron-renderer": "^0.14.5"
    },
    "build": {
        "appId": "com.kyamtale.launcher",
        "productName": "KyamLauncher",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "package.json",
            "config.json",
            "jre.json"
        ],
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico"
        },
        "linux": {
            "target": [
                "zip"
            ],
            "category": "Game",
            "icon": "build/icon.png"
        },
        "mac": {
            "target": "dmg",
            "icon": "build/icon.icns",
            "hardenedRuntime": true,
            "gatekeeperAssess": false
        }
    }
}
